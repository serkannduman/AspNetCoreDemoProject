@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}



<form asp-controller="Writer" asp-action="WriterEditProfile" method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                <br />
                <input type="hidden" asp-for="WriterID" class="form-control"/>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="WriterName">Yazar Ad Soyad</label>
                        <input type="text" asp-for="WriterName" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="WriterName"></span>
                    </div>
                    <div class="form-group">
                        <label for="WriterMail">Mail Adres</label>
                        <input type="email" asp-for="WriterMail"class="form-control" id="exampleInputEmail3" />
                        <span class="text-danger" asp-validation-for="WriterMail"></span>
                    </div>
                    <div class="form-group">
                        <label for="WriterPassword">Şifre</label>
                        <input type="password" class="form-control" asp-for="WriterPassword" id="exampleInputPassword4" placeholder="Şifre">
                        <span class="text-danger" asp-validation-for="WriterPassword"></span>
                    </div>
                    
                    <div class="form-group">
                        <label>Yazar Görsel</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                            </span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="WriterAbout">Yazar Hakkında</label>
                        <textarea class="form-control" asp-for="WriterAbout" id="exampleTextarea1" rows="6"></textarea>
                        <span class="text-danger" asp-validation-for="WriterAbout"></span>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">İptal</button>
                </form>
            </div>
        </div>
    </div>

</form>

