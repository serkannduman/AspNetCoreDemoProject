@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">

                <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
                </div>

                <form asp-controller="Register" asp-action="Index" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="WriterName">Ad Soyad</label>

                            <input type="text" class="form-control" asp-for="WriterName" id="validationDefault01" name="WriterName" placeholder="" required="">
                            <span class="text-danger" asp-validation-for="WriterName"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="WriterMail">Mail Adresi</label>
                            <input type="email" class="form-control" asp-for="WriterMail" name="WriterMail" id="validationDefault02" placeholder="" required="">
                            <span class="text-danger" asp-validation-for="WriterMail"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="WriterPassword">Şifre</label>
                            <input type="password" class="form-control" asp-for="WriterPassword" name="WriterPassword" id="password1" placeholder="" required="">
                            <span class="text-danger" asp-validation-for="WriterPassword"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
                            <input type="text" class="form-control" asp-for="WriterImage" name="WriterImage" id="password2" placeholder="" required="">
                            <span class="text-danger" asp-validation-for="WriterImage"></span>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
    <br />

    <script>
        $('#btn1').click(function () {
            swal("Site Kullanım Şartları","Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber epostaları spam ölçüsüne varmadan gönderilmeye devam edecektir.Eğer e-posta bülteninden çıkmak isterseniz mail ileti dizisini durdurabilirsiniz. Şifre ve mail adresleriniz şifrelenmiş formatta herhangi bir kullanıcının görmeyeceği formatta veri tabanımızda tutulmaktadır.");
        });
    </script>
</section>

